{
  "name": "sample-typescript-express-pug-project",
  "version": "1.0.0",
  "description": "",
  "main": "src/www/index.ts",
  "scripts": {
    "start": "node ./dist/www/index.js",
    "start:dev": "gulp && ts-node ./src/www/index.ts",
    "start:watch": "gulp && nodemon --watch \"src/**/*.ts\" --ext \"ts, json\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/www/index.ts\"",
    "build": "rimraf ./dist && tsc",
    "test": "cross-env NODE_ENV=test && npm run test-env && mocha -r dotenv/config -r ts-node/register test/**/*.spec.ts",
    "test-env": "mocha -r dotenv/config -r ts-node/register test/env._spec.ts",
    "test-e2e": "npm run build && npm run test-env && cross-env NODE_ENV=test testcafe chrome:headless test/e2e/*.e2e.ts --app \"npm start -- cross-env NODE_ENV=test\"",
    "eslint": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/cors": "^2.8.12",
    "@types/debug": "^4.1.7",
    "@types/dotenv-flow": "^3.2.0",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/mocha": "^9.1.0",
    "@types/morgan": "^1.9.3",
    "@types/serve-favicon": "^2.5.3",
    "@types/stylus": "^0.48.36",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "browser-sync": "^2.27.9",
    "chai": "^4.3.6",
    "cross-env": "^7.0.3",
    "eslint": "^8.11.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-notify": "^4.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-pug": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-stylus": "^2.7.1",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "supertest": "^6.2.2",
    "testcafe": "^1.18.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
